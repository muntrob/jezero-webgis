     <timeout>300</timeout>
    </locker>
   <format name="PNGQ_FAST" type ="PNG">
	<compression>fast</compression>
	<colors>256</colors>
	<transparent>PNG_BEST</transparent>
   </format>

   <threaded_fetching>true</threaded_fetching>
   
</mapcache>
